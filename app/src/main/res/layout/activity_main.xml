<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.android.selectorview.SelectorTextView
        android:id="@+id/selectorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="按钮"
        android:textSize="30dp"
        app:checked="false"
        app:falseImgBackground="@color/colorAccent"
        app:falseTextColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:openClickChecked="true"
        app:trueImgBackground="@color/colorPrimary"
        app:trueTextColor="@color/colorAccent" />

    <com.android.selectorview.SelectorImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        app:checked="false"
        app:falseImgSrc="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/selectorTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:openClickChecked="true"
        app:trueImgSrc="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>